<h2>スケジュール詳細</h2>

<table>
  <tr>
    <th>名前</th>
    <td><%= @task.title %></td>
  </tr>
  <tr>
    <th>開始日</th>
    <td><%= @task.start_day.strftime('%Y年%m月%d日') %></td>
  </tr>
  <tr>
    <th>終了日</th>
    <td><%= @task.finish_day.strftime('%Y年%m月%d日') %></td>
  </tr>
  <tr>
    <th>終日</th>
    <td>
      <% if @task.allday == true %>
        ○
      <% else @task.allday == false %>

      <% end %>
    </td>
  </tr>
  <tr>
    <th>スケジュールメモ</th>
    <td><%= @task.memo %></td>
  </tr>
</table>

<div>
  <ul>
    <li><%= link_to"スケジュール一覧に戻る", :tasks %></li>
    <li><%= link_to"スケジュールを編集する", edit_task_path %></li>
    <li><%= link_to"スケジュールを削除", task_path,method: :delete, data:{confirm:"本当に削除しますか？"} %></li>
  </ul>
</div>